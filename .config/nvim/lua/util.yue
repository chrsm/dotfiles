nor = { noremap: true }
nors = { noremap: true, silent: true }

leader = ','

vim.g.mapleader = leader

keymap = vim.api.nvim_set_keymap
ins = (lhs, rhs, opts = {}) ->
  keymap 'i', lhs, rhs, opts

no = (lhs, rhs, opts = {}) ->
  keymap 'n', lhs, rhs, opts

{
  :leader,
  :nor,
  :nors,
  :no,
  :ins,
}

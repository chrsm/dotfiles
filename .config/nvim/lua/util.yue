v = vim or {}

nor = { noremap: true }
nors = { noremap: true, silent: true }

leader = ','

v.g.mapleader = leader

keymap = v.api.nvim_set_keymap
ins = (lhs, rhs, opts = {}) ->
  keymap 'i', lhs, rhs, opts

no = (lhs, rhs, opts = {}) ->
  keymap 'n', lhs, rhs, opts

{
  :leader,
  :nor,
  :nors,
  :no,
  :ins,
}

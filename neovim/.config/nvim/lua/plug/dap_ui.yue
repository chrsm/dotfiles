import "macros" as { $ }

cfg =
  sidebar:
    size: 40
    position: "right"
    elements:
      * { id: "scopes", size: 0.25 }
      * { id: "breakpoints", size: 0.25 }
      * { id: "stacks", size: 0.25 }
      * { id: "watches", size: 0.25 }

export default {
  setup: ->
    import "dap" as dap
    import "dapui" as ui

    ui.setup cfg

    dap.listeners.after.event_initialized["dapui_config"] = ->
      ui.open!
}

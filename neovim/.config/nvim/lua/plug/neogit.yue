import "macros" as { $ }

cfg =
  kind: "split"
  integrations:
    diffview: true
  commit_editor:
    kind: 'split'

export default {
  config: ->
    import "neogit" as ng
    import "which-key" as wk
    
    ng.setup cfg

    wk.register {
      name: "neogit"
      g:
        * "<CMD>Neogit<CR>"
        * "Open neogit"
    }, { mode: "n", prefix: "<leader>g", noremap: true, silent: true }
}

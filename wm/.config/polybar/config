label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/wgipcheck]
type = custom/script
exec = "curl https://am.i.mullvad.net/ip 2>/dev/null"
exec-if = "nmcli c show --active | grep wireguard > /dev/null"
interval = 120
format = pub-ip: <label>
format-underline = #5b
format-prefix = "ðŸ–§ "
format-prefix-foreground = #5b

[module/vpncheck]
type = custom/script
exec = "((nmcli c show --active | grep wireguard > /dev/null) && echo 'on') || echo 'off'; exit 0"
interval = 10
format = wg/vpn: <label>
format-prefix = "ïƒ¬ "
format-prefix-foreground = #5b
format-underline = #5b


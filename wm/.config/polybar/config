[colors]
background = #8845415c
background-alt = #8845415c
foreground = #ccd8d4e6
foreground-alt = #ccd8d4e6
linecolor = #554d7c
border-bottom = 2
border-bottom-color = #37304d
primary = #cc8d84e6
secondary = #cc8d84e6
alert = #fff

[bar/main_bar]
monitor = ${env:MONITOR}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

